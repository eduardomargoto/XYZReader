<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_side_margin"
    android:elevation="@dimen/card_elevation"
    android:clickable="true"
    android:focusable="true"
    android:animateLayoutChanges="true"
    android:background="@color/placeholder"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/empty_detail"
            android:adjustViewBounds="true"
            android:background="@color/placeholder" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_padding"
            android:paddingTop="@dimen/list_padding"
            android:paddingRight="@dimen/list_padding"
            android:paddingBottom="@dimen/list_side_margin"
            android:textColor="@color/article_title"
            android:ellipsize="end"
            android:textSize="@dimen/list_text_size_title"
            android:maxLines="2" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_padding"
            android:paddingRight="@dimen/list_padding"
            android:paddingBottom="@dimen/list_padding"
            android:textColor="@color/article_subtitle"
            android:maxLines="1"
            android:textSize="@dimen/list_text_size_subtitle"
            android:ellipsize="end" />
    </LinearLayout>

</android.support.v7.widget.CardView>
